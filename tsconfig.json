{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "esnext", "dom"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["**/dist", "node_modules", "**/node_modules"]
}
